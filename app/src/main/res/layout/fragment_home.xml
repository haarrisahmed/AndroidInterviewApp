<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/java_button"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="@string/java_btn"
            android:textColor="?attr/colorPrimaryText" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/kotlin_button"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="@string/kotlin_btn"
            android:textColor="?attr/colorPrimaryText" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/android_button"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="@string/android_btn"
            android:textColor="?attr/colorPrimaryText" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/libs_button"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="@string/libs_btn"
            android:textColor="?attr/colorPrimaryText" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/general_button"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="@string/general_btn"
            android:textColor="?attr/colorPrimaryText" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>